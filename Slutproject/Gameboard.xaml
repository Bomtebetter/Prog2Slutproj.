<UserControl x:Class="Slutproject.Gameboard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Slutproject"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300"
             Background="#F5F1ED">

    <UserControl.Resources>
        <DataTemplate x:Key="UserDataTemplate">
            <StackPanel >
                <Label HorizontalAlignment="Center" Content="test" />
                    
            </StackPanel>
        </DataTemplate>
    </UserControl.Resources>



    <ItemsControl x:Name="UserList" ItemTemplate="{StaticResource UserDataTemplate}" ItemsSource="{Binding Source=Board}">
        <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
                <VirtualizingStackPanel Orientation="Vertical"/>
            </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
    </ItemsControl>


</UserControl>
